<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="org.eclipse.che.ide.ext.java.client.project.classpath.ProjectClasspathResources"/>

    <ui:style src="org/eclipse/che/ide/api/ui/style.css">
        .button {
            width: 100px;
            height: 25px;
            float: left;
            cursor: pointer;
            box-shadow: 0 0 0 1px #191c1e;
            text-align: center;
            margin-top: 12px;
        }

        .button:hover {
            box-shadow: 0 0 0 1px buttonHoverBorderColor, 0 0 0 2px buttonHoverBackground;
            color: buttonHoverFontColor;
        }

        .buttonLabel {
            color: mainFontColor;
            margin-top: 5px;
            text-shadow: 0 .4px 0 rgba(0, 0, 0, 0.5);
            font-weight: bold;
        }
    </ui:style>

    <g:FlowPanel ui:field="button" addStyleNames="{style.button}">

        <g:Label ui:field="buttonName" addStyleNames="{style.buttonLabel}"/>

    </g:FlowPanel>
</ui:UiBinder>
