<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='org.eclipse.che.ide.Resources'/>
    <ui:with field='locale' type='org.eclipse.che.ide.CoreLocalizationConstant'/>
    <ui:style>
        @eval buttonHoverBackground org.eclipse.che.ide.api.theme.Style.getButtonHoverBackground();
        @eval buttonHoverBorderColor org.eclipse.che.ide.api.theme.Style.getButtonHoverBorderColor();

        .emptyBorder {
            margin: 6px;
        }

        .checkBox {
            float: left;
            margin-top: 4px;
        }

        .selectDirectoryButton {
            min-width: 25px;
            margin-left: 2px;
            border-radius: 5px;
            padding: 0 7px;
        }

        .selectDirectoryButton:hover,
        .selectDirectoryButton:focus {
            float: left;
            box-shadow: 0 0 0 1px buttonHoverBorderColor, 0 0 0 2px buttonHoverBackground;
            border-color: transparent;
        }

        .section {
            float: left;
            line-height: 22px;
            margin: 0 0 0 4px;
        }

        .sectionContent {
            margin-left: 15px;
            margin-bottom: 5px;
        }

        .label {
            float: left;
            margin-bottom: 0;
        }

        .inputTextBox {
            float: left;
            margin-bottom: 2px;
            margin-left: 6px;
        }

        .box {
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }
    </ui:style>
    <g:FlowPanel width="400px" addStyleNames="{style.emptyBorder}" debugId="text-search-mainPanel">
        <g:FlowPanel addStyleNames="{style.emptyBorder} {style.section}">
            <g:Label addStyleNames="{style.label}" text="{locale.textSearchContentLabel}"/>
            <g:TextBox ui:field="text" width="310px" addStyleNames="{style.box} {style.inputTextBox}"
                       debugId="text-search-text"/>
        </g:FlowPanel>

        <g:FlowPanel addStyleNames="{style.emptyBorder} {style.section}">
            <g:Label text="{locale.textSearchOptionsLabel}" addStyleNames="{style.label}"/>
            <g:RadioButton width="100%" ui:field="regularExpression" name="searchMode" text="{locale.textSearchRegularExpressionModeLabel}"
                           value="false"
                           addStyleNames="{style.sectionContent}"/>
            <g:RadioButton width="100%" ui:field="fullCompliance" name="searchMode" text="{locale.textSearchFullComplianceModeLabel}"
                           value="true"
                           addStyleNames="{style.sectionContent}"/>
        </g:FlowPanel>

        <g:FlowPanel addStyleNames="{style.emptyBorder} {style.section}">
            <g:Label text="{locale.textSearchScopeLabel}" width="100%" addStyleNames="{style.label}"/>
            <g:CheckBox ui:field="isUseDirectory" addStyleNames="{style.checkBox} {style.sectionContent}" value="false"/>
            <g:Label addStyleNames="{style.label}" text="{locale.textSearchDirectory}"/>
            <g:TextBox enabled="false" ui:field="directory" width="257px" addStyleNames="{style.box}{style.inputTextBox}"
                       debugId="text-search-directory"/>
            <g:Button enabled="false" ui:field="selectPathButton" text="..." addStyleNames="{style.selectDirectoryButton}"
                      debugId="text-search-directory-button"/>
        </g:FlowPanel>

        <g:FlowPanel addStyleNames="{style.emptyBorder} {style.section}">
            <g:Label text="{locale.textSearchFileFilterLabel}" width="100%" addStyleNames="{style.label}"/>
            <g:CheckBox ui:field="isUseFileMask" addStyleNames="{style.checkBox} {style.sectionContent}" value="false"/>
            <g:Label addStyleNames="{style.label}" text="{locale.textSearchFileMask}"/>
            <g:TextBox enabled="false" ui:field="filesMask" width="296px" addStyleNames="{style.box} {style.inputTextBox}"
                       debugId="text-search-files"/>
            <g:Label width="100%" addStyleNames="{res.coreCss.greyFontColor}"
                     text="{locale.navigateToFileViewFileFieldPrompt}"/>
        </g:FlowPanel>

        <g:SimplePanel addStyleNames="{style.emptyBorder}">
            <g:Label ui:field="errLabel" width="100%" addStyleNames="{res.coreCss.errorFont} {style.label}"/>
        </g:SimplePanel>
    </g:FlowPanel>
</ui:UiBinder>
